---
import SEO from "~/components/atoms/SEO.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<SEO title={title} />
	</head>
	<body>
		<slot />
		<main class="wrapped">
			<slot name="wrapped" />
		</main>
	</body>
</html>

<style lang="less" is:global>
	* {
		box-sizing: border-box;
		padding: 0;
		margin: 0;
	}

	.wrapped {
		max-width: 1080px;
		margin: 0 auto;
		padding: 0 2rem;
	}
</style>
