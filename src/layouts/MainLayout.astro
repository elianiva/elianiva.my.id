---
import SEO from "~/components/atoms/SEO.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<SEO title={title} />
	</head>
	<body>
		<slot />
	</body>
</html>

<style lang="less" is:global>
	* {
		box-sizing: border-box;
		padding: 0;
		margin: 0;
	}
</style>
