---
import SEO from "~/components/atoms/SEO.astro";
import Navbar from "~/components/organisms/Navbar.astro";
import "~/styles/global.less";

export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<SEO title={title} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@400;500;600;700;&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body>
		<Navbar />
		<slot />
		<main class="wrapped">
			<div class="gradient teal"></div>
			<div class="gradient blue"></div>
			<slot name="wrapped" />
		</main>
	</body>
</html>

<style lang="less">
	@import "../styles/variables.less";

	.wrapped {
		max-width: @wrapper-width;
		margin: 0 auto;
		padding: 0 2rem;
		position: relative;
	}

	.gradient {
		position: absolute;
		border-radius: 50%;
		z-index: -1;
		width: 16rem;
		height: 16rem;
		mix-blend-mode: multiply;
		filter: blur(12rem);

		&.teal {
			background-color: fade(@teal, 10%);
			top: 8rem;
			left: -10rem;
			width: 40rem;
			height: 40rem;
		}

		&.blue {
			background-color: fade(@blue, 10%);
			top: 20rem;
			right: -8rem;
			width: 40rem;
			height: 40rem;
		}
	}
</style>
