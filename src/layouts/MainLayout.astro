---
import SEO, { type Props as SEOProps } from "~/components/SEO.astro";
import TopBar from "~/components/TopBar.svelte";

// fonts
import "@fontsource/chonburi";
import "@fontsource/varela-round";
import "@fontsource/ibm-plex-mono/400.css";
import "@fontsource/ibm-plex-mono/400.css";
import "@fontsource/ibm-plex-mono/500.css";
import "@fontsource/ibm-plex-mono/400-italic.css";
import { ClientRouter } from "astro:transitions";
import "../index.css";

export interface Props {
	seo: SEOProps;
	isPost?: boolean;
}

const { seo, isPost = false } = Astro.props;
---

<!doctype html>
<html lang="en" class="h-full">
	<head>
		<SEO {...seo} />
		<ClientRouter />
		<!-- revisit this	 -->
		<!-- <script is:inline>document.documentElement.setAttribute('data-js-enabled', 'true');</script> -->
		{!import.meta.env.DEV && (
			<script is:inline defer src="https://cloud.umami.is/script.js" data-website-id="09fb4ce5-10bb-467c-9aee-2c95241715dc"></script>
		)}
	</head>
	<body class="h-full p-4 md:p-10">
		<!-- Skip Navigation Link -->
		<a
			href="#main-content"
			class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-pink-600 text-white px-4 py-2 rounded-md z-50 focus:outline-none focus:ring-2 focus:ring-pink-800"
		>
			Skip to main content
		</a>

		<!-- Floating Gradient Orbs -->
		<div class="fixed inset-0 overflow-hidden pointer-events-none -z-10">
			<div class="absolute -top-20 -right-20 w-96 h-96 bg-[#FFD1DC] rounded-full blur-3xl opacity-40"></div>
			<div class="absolute -bottom-20 -left-20 w-80 h-80 bg-[#FFE4E1] rounded-full blur-3xl opacity-30"></div>
			<div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-[#E6E6FA] rounded-full blur-3xl opacity-20"></div>
		</div>

		<TopBar isPost={isPost} client:load />

		<main id="main-content" role="main">
			<slot />
		</main>
	</body>
</html>
