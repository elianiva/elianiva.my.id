---
import ButtonLink from "~/components/atoms/ButtonLink.astro";
import MainLayout from "~/layouts/MainLayout.astro";
---

<MainLayout title="Home">
	<Fragment slot="wrapped">
		<header class="header">
			<h1 class="heading">
				Hello there! I'm <strong class="name">Elianiva</strong>
			</h1>
			<p class="detail">
				I'm a fullstack web developer mainly working on the frontend world using Typescript, React,
				Svelte, and Solid. I also like to write articles every now and then.
			</p>
			<ButtonLink text="About Me" href="/about" />
		</header>
	</Fragment>
</MainLayout>

<style lang="less">
	@import "../styles/variables.less";

	.header {
		padding-top: 6.4rem;
	}

	.heading {
		font-size: 6.4rem;
		font-weight: 600;
		font-family: @display;
		margin-bottom: 1rem;

		.name {
		}
	}

	.detail {
		font-family: @sans;
		font-size: 2rem;
		line-height: 1.625em;
		color: @grey;
		max-width: 60ch;
		margin-bottom: 4rem;
		font-weight: 500;
	}
</style>
