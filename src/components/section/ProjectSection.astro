---
import ProjectCard from "~/components/card/ProjectCard.astro";
import type { Project } from "~/models/project.ts";
import MotionReveal from "~/components/animation/MotionReveal.svelte";

interface Props {
	projects: Project[];
	title: string;
	description: string;
	seeMoreUrl: string | null;
}

const { projects, title, description, seeMoreUrl } = Astro.props;
---

<section class="pt-6 md:pt-10">
	<MotionReveal amount={0.15} delay={0.05} client:idle>
		<h2 class="text-xl md:text-2xl font-bold font-serif text-pink-950">
			{title}
		</h2>
		<p class="text-xs md:text-base font-serif text-pink-950/70 pt-2 pb-4">
			{description}
		</p>
	</MotionReveal>
	<div
		class="relative grid grid-cols-[repeat(auto-fill,minmax(16rem,1fr))] gap-3 pb-4"
	>
		{
			projects.map((project) => (
				<ProjectCard
					title={project.data.title}
					description={project.data.description}
					href={`/projects/${project.slug}`}
					stack={project.data.stack}
				/>
			))
		}
	</div>
	{
		seeMoreUrl !== null && (
			<a
				data-astro-prefetch
				href={seeMoreUrl}
				class="project-card uppercase font-mono text-pink-950 hover:text-pink-800 transition-colors text-sm"
			>
				&#8213 See more
			</a>
		)
	}
</section>
