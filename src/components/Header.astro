---
import Icon from "astro-icon";
import data from "~/data/sites";

type Social = {
	url: string;
	icon: string;
};

const socials: Social[] = [
	{ url: data.github, icon: "codicon:github" },
	{ url: data.twitter, icon: "ph:twitter-logo-fill" },
	{ url: `mailto:${data.email}`, icon: "ic:round-mail" },
];
---

<section
	class="relative text-center justify-items-center grid-rows-[14rem_1fr] md:grid-rows-none gap-8 md:gap-4 items-center justify-center max-w-screen-lg mx-auto py-40"
>
	<div class="relative">
		<span class="text-2xl font-serif font-semibold text-zinc-700">Hi there! I'm..</span>
		<span class="relative block font-heading text-clamped-lg font-bold leading-relaxed text-zinc-800">
			Dicha Zelianivan Arkana
		</span>
		<p class="m-0 relative block font-serif text-clamped-sm mb-4 text-zinc-600 leading-loose">
			I'm currently an undergrad studying Informatics Engineering, and I do some freelance gigs on the side. I'm
			all about contributing to open source projects and learning something new every day. I speak Bahasa
			Indonesia and English fluently, currently learning Japanese. Nice to meet ya! ãƒ„
		</p>
		<div class="grid grid-cols-3 items-center justify-items-center max-w-[180px] mx-auto mb-8">
			{
				socials.map((s) => (
					<a
						class="text-slate-600 hover:text-slate-800"
						href={s.url}
						target="_blank"
						rel="norel noreferrer"
						aria-label={s.url}
					>
						<Icon class="w-7 h-7 text-current" name={s.icon} />
					</a>
				))
			}
		</div>
	</div>
</section>
