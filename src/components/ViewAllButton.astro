---
import ArrowRightIcon from "~icons/ph/arrow-right";

interface Props {
	href: string;
	label: string;
	ariaLabel: string;
}

const { href, label, ariaLabel } = Astro.props;
---

<a
	data-astro-prefetch
	{href}
	class="group w-fit mx-auto flex items-center justify-center gap-2 bg-white/50 rounded-lg border-[0.5px] border-pink-200/50 py-2 px-4 text-sm font-body text-pink-900 hover:border-pink-200 hover:bg-pink-50/50 transition-all focus:outline-none focus:ring-2 focus:ring-pink-400 focus:ring-offset-2"
	aria-label={ariaLabel}
>
	<span>{label}</span>
	<span class="max-w-0 group-hover:max-w-4 overflow-hidden opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-200 ease-out">
		<ArrowRightIcon class="w-4 h-4" />
	</span>
</a>
